<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ADD">

    <TextView
        android:id="@+id/txtNEW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="418dp"
        android:fontFamily="casual"
        android:text="NEW SONG"
        android:textColor="#4f03ab"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/edtNAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnSAVE"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-64dp"
        android:layout_marginTop="109dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColorHighlight="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="115dp" />

    <EditText
        android:id="@+id/edtSINGER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="168dp"
        android:ems="10"
        android:hint="Singer"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/darker_gray"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="177dp" />

    <EditText
        android:id="@+id/edtDATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="238dp"
        android:ems="10"
        android:hint="Date"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/darker_gray"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="244dp" />

    <EditText
        android:id="@+id/edtWATCHERS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtDATE"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="181dp"
        android:ems="10"
        android:hint="Watchers"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/darker_gray" />

    <Button
        android:id="@+id/btnSAVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="133dp"
        android:layout_marginBottom="80dp"
        android:background="#ddc2f0"
        android:onClick="onClick"
        android:text="SAVE"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="334dp" />

</RelativeLayout>